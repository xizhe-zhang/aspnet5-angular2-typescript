@{
    ViewBag.Title = "NetSDL POS";
}

@section styles
{
    <link href="http://amibucket1.oss-cn-shanghai.aliyuncs.com/p20/lib/css/jquery.fancybox.css" rel="stylesheet" />
    <link href="http://amibucket1.oss-cn-shanghai.aliyuncs.com/p20/lib/css/alertify.core.css" rel="stylesheet" />
    <link href="http://amibucket1.oss-cn-shanghai.aliyuncs.com/p20/lib/css/alertify.bootstrap.css" rel="stylesheet" />
    <link href="http://amibucket1.oss-cn-shanghai.aliyuncs.com/p20/lib/css/flipclock.css" rel="stylesheet" />
    <link href="http://amibucket1.oss-cn-shanghai.aliyuncs.com/p20/lib/css/style.css" rel="stylesheet" />
    @*<link href="~/lib/css/alertify.default.css" rel="stylesheet" />*@
}

<pos-app style="height: 100vh;" id="pos">
    <div style="display:flex; justify-content: center; align-items: center; font-size: 20px; height: 100vh; background-color: white;">
        <i class="fa fa-refresh fa-spin fa-3x fa-fw"></i>
        <span>Loading...</span>
    </div>
</pos-app>

@section scripts
{
    <script src="http://amibucket1.oss-cn-shanghai.aliyuncs.com/p20/lib/js/jquery.fancybox.pack.js"></script>
    <script src="http://amibucket1.oss-cn-shanghai.aliyuncs.com/p20/lib/js/alertify.min.js"></script>
    <script src="http://amibucket1.oss-cn-shanghai.aliyuncs.com/p20/lib/js/qrcode.min.js"></script>
    <script src="http://amibucket1.oss-cn-shanghai.aliyuncs.com/p20/lib/js/flipclock.min.js"></script>
    <script src="http://amibucket1.oss-cn-shanghai.aliyuncs.com/p20/lib/js/Class.js"></script>   
}

@section customScript
{
    System.import('app').catch(console.log.bind(console));
    
    $(document).ready(function() {
        $('.fancybox').fancybox();
    });
}